{
  "compilerOptions": {
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": false,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "skipLibCheck": true,
    "lib": ["dom", "es2018"],
    "moduleResolution": "node",
    "module": "esnext",
    "jsx": "preserve",
    "importHelpers": true,
    "allowSyntheticDefaultImports":true,
    "allowJs": true,
    "esModuleInterop": true
  },
  "include": [
    "./src"
  ]
}
